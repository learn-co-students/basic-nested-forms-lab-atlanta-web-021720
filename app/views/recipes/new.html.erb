<%= form_for @recipe do |f| %>

    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <br>
    <%= f.fields_for :ingredients do |ingre| %>
    
        <%= ingre.label :name %><br>
        <%= ingre.text_field :name %>
        <br>
        <%= ingre.label :quantity %><br>
        <%= ingre.text_field :quantity %><br>
        <br>
    <% end %>
    <%= f.submit %>
<% end %>